<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

    <link rel="stylesheet" href="/vendor/bootstrap.min.css" type="text/css" />

  </head>

  <body>
    <div id="wrapper">

      <!-- SIDEBAR -->
      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li class="sidebar-brand">Bar Pin</li>

          <li id="notLoggedInForm">
            <form class="loginForm">
              <input type="text" class="form-control" id="inputUsername" placeholder="Username" required>
              <input type="password" class="form-control" id="inputPassword" placeholder="Password" required>
              <button type="submit" id="loginButton" class="btn btn-primary formButton">Sign in</button>
              <button type="submit" id="registerButton" class="btn btn-primary formButton">Register</button>
              <button type="submit" id="logoutButton" class="btn btn-primary formButton">Logout</button>
            </form>
          </li>
        </ul>
      </div>

      <!-- GOOGLE MAP -->
      <div id="map"></div>

      <!-- TOGGLE SIDE BAR BUTTON -->
      <a href="#menu-toggle" class="btn btn-secondary" id="menu-toggle"><span class="glyphicon glyphicon-align-left" aria-hidden="true"></span></a>

      <!-- CREATE NEW PIN FORM -->
      <div class="createContainer">
        <form id="createForm" >
          <h2>Create A Pin!</h2>
          <div class="form-group">
            <input id="createName" name="name" type="text" placeholder="Name" required>
          </div>
          <div class="form-group">
            <input id="createImage" name="image" type="url" placeholder="<Img url>">
          </div>
          <div class="form-group">
            <textarea id="createDescription" name="description" placeholder="Please enter some descriptions"></textarea>
          </div>
          <input id="submitPin" class="btn btn-default" type="submit" value="Submit">
          <input class="cancel btn btn-default" value="Cancel">
        </form>
      </div>

    </div>

    <script type="text/javascript" src="/vendor/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="/vendor/bootstrap.min.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/map.js"></script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAfeIRFGkKmV3VDCcQtm517QYp87KA0www&callback=initMap"></script>

  </body>
</html>
