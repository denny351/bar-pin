<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/sidebar.css" type="text/css" />
    <link rel="stylesheet" href="/stylesheets/forms.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="/stylesheets/index.css" type="text/css" />

  </head>

  <body>
    <div id="wrapper">

      <!-- SIDEBAR -->
      <div id="sidebar-wrapper">

        <ul class="sidebar-nav">
          <li class="sidebar-brand"><img src="/images/barpinLogo.png"></li>

          <li id="notLoggedInForm">
            <form class="loginForm">
            <!-- Login Form -->
              <% if (!userID) { %>
              <input type="text" class="form-control" id="inputUsername" placeholder="Username" required>
              <input type="password" class="form-control" id="inputPassword" placeholder="Password" required>
              <button type="submit" id="loginButton" class="btn btn-primary formButton">Sign in</button>
              <button type="submit" id="registerButton" class="btn btn-primary formButton">Register</button>
              <p class="displayError"></p>
              <% } else { %>
              <div class="userImage">
              </div>

              <p class="userName">@<%= username %></p>
            </form>

            <!-- Like Buttons on sidebar -->
            <h1 class="sidebar-header">Show Me</h1>
            <div class="btn-group btn-group-vertical" role="group" aria-label="...">
              <button type="button" class="btn btn-default all-bars filter-btn">All Bars</button>
              <button type="button" class="btn btn-default my-bars filter-btn">My Bars</button>
              <button type="button" class="btn btn-default fav-bars filter-btn">My Favs</button>
              <button type="button" class="btn btn-default user-bars filter-btn">Search</button>
            </div>

            <form class="user-search" style="display: none">
              <input class="form-control" placeholder="Search Username" list="usernames" name="username">
              <button class="btn btn-default btn-secondary">Search</button>
              <datalist id="usernames">
              </datalist>
            </form>
          </li>
        </ul>

        <button type="submit" id="logoutButton" class="btn btn-primary formButton">Logout</button>

        <% } %>

      </div>

      <!-- GOOGLE MAP -->
      <div id="map"></div>

      <!-- TOGGLE SIDE BAR BUTTON -->
      <a href="#menu-toggle" class="btn btn-secondary" id="menu-toggle"><span class="glyphicon glyphicon-align-left" aria-hidden="true"></span></a>

      <!-- CREATE NEW PIN FORM -->
        <div class="createContainer">
        <% if (userID) { %>
          <form id="createForm" >
            <h2>Pin A Bar On The Map!</h2>
            <div class="form-group">
              <input id="createName" class="textInput" name="name" type="text" placeholder="Name" required>
            </div>
            <div class="form-group">
              <input id="createImage" class="textInput" name="image" type="url" placeholder="<Img url>">
            </div>
            <div class="form-group">
              <textarea id="createDescription" class="textInput" name="description" placeholder="Please enter some descriptions"></textarea>
            </div>
            <div id="typeRadio" class="form-group">
              <input type="radio" id="barType1" name="barType" value="pub" checked>
              <label for="barType1">Pub</label>
              <input type="radio" id="barType2" name="barType" value="dining">
              <label for="barType2">Dining</label>
              <input type="radio" id="barType3" name="barType" value="karaoke">
              <label for="barType3">Karaoke</label>
              <input type="radio" id="barType4" name="barType" value="meetUp">
              <label for="barType4">Meet Up</label>
            </div>
            <input id="submitPin" class="btn btn-default" type="submit" value="Submit">
            <input class="cancel btn btn-default" value="Cancel">
          </form>
        <% } else { %>
          <div id="notLoggedIn" class="alert alert-danger" role="alert">
            <p><strong>Oh snap!</strong> Log in first!.</p>
            <span class="cancel glyphicon glyphicon-remove" aria-hidden="true"></span>
          </div>
        <% } %>
        </div>

      <!-- EDIT PIN FORM -->
      <div class="editContainer">
        <form id="editForm" >
          <h2>Edit Your Pin!</h2>
          <div class="form-group">
            <input id="editName" class="textInput" name="name" type="text" required>
          </div>
          <div class="form-group">
            <input id="editImage" class="textInput" name="image" type="url">
          </div>
          <div class="form-group">
            <textarea id="editDescription" class="textInput" name="description"></textarea>
          </div>
          <input id="editPin" class="btn btn-default" type="submit" value="Edit">
          <input class="cancel btn btn-default" value="Cancel">
        </form>
      </div>

    </div>

    <script type="text/javascript" src="/vendor/jquery-3.2.1.min.js"></script>
    <script src="/vendor/js.cookie.js"></script>
    <script type="text/javascript" src="/vendor/bootstrap.min.js"></script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAfeIRFGkKmV3VDCcQtm517QYp87KA0www&callback=initMap"></script>
    <script type="text/javascript" src="/scripts/map.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/sidebar.js"></script>

  </body>
</html>
